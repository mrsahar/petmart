<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.post.LastLocationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/txt_ads_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="Phone-number"
            android:padding="15dp"
            android:background="@drawable/rounded_corner"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_ads_phone"
            android:orientation="horizontal"
            android:padding="9dp"
            android:background="@drawable/rounded_corner"
            android:weightSum="5">

            <EditText
                android:id="@+id/txt_ads_Location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="10dp"
                android:hint="@string/location"
                />

            <ImageButton
                android:id="@+id/search_location"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingBottom="5dp"
                android:src="@drawable/ic_location_search"
                />

        </LinearLayout>

        <Button
            android:id="@+id/post_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/post_your_ad"
            android:background="@drawable/round_corner_buttom"/>
    </RelativeLayout>

</FrameLayout>